<p id="notice"><%= notice %></p>
<div class="row ">
  <div class="col-md-12">
    <div class="page-header"><h3>Meetings</h3></div>
  </div>
</div>

<div class="row ">
  <%= turbo_frame_tag "add_new_meeting" do %>
    <div class="col-md-12">
      <%= button_to "Add meetings", new_meeting_path, method: :get, class: "btn btn-small btn-outline-dark" %>
    </div>
  <% end %>
</div>

<% @meetings.each do |meeting| %>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <%= button_to meeting.date.strftime("%a %b %d"), meeting, method: :get, class: "btn btn-info btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex bd-highlight">
        <div class="p-2 flex-fill bd-highlight"><%= meeting.home_team_name %></div>
        <div class="p-2 flex-fill bd-highlight"><%= meeting.away_team_name %></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex bd-highlight">
        <div class="p-2 flex-fill bd-highlight">
          <%= button_to 'Edit', edit_meeting_path(meeting), class: 'btn btn-sm btn-outline-secondary', method: :get %>
        </div>
        <div class="p-2 flex-fill bd-highlight">
          <%= button_to 'Delete', meeting, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
